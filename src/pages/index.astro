---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Linkedin from '../icons/Social/Linkedin.astro'
import Github from '../icons/Social/Github.astro'
import Social_icons from '../components/Social_icons.astro'
import Gmail from '../icons/Social/Gmail.astro'
import Section from '../components/Section.astro';
import Section_tecno from '../components/Section_tecno.astro';
import Tecnologias from '../components/Tecnologias.astro';
import Code from '../icons/Titulos/Code.astro'
import Proyectos from '../components/Proyectos.astro'
import Experiencia from '../components/Experiencia.astro'
import Sobre_mi from '../components/Sobre_mi.astro'
import Cert_icon from '../icons/Titulos/Cert_icon.astro'
import Me_icons from '../icons/Titulos/Me_icon.astro'
import Section_sobremi from '../components/Section_sobremi.astro'
import Footer from '../components/Footer.astro'
import Discord from '../icons/Social/Discord.astro'
import Section_experiencias from '../components/Section_experiencias.astro';
---

<Layout title="Portfolio de Capi34 - Programador FiveM"
description="Mi objetivo es aprender y mejorar constantemente, participando en proyectos innovadores que me permitan ampliar mis conocimientos y aportar soluciones creativas y efectivas.">
	<main class="px-4">
		<Section>
			<img class="rounded-full w-20 h-20 mb-4" 
			src="https://cdn.discordapp.com/avatars/448170541371752449/4934802ef79306eba2e4a1c902328cf2.png?size=1024" alt="Capi34"
			/> 
		<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-5 pb-6 lg:pb-10">
			Hola, Soy Capi34 
			<a href="https://discord.com/users/448170541371752449" target="_blank" rel="noopener"> <div class="flex justify-center items-center hover:scale-110 transition">
				<Badge> Disponible </Badge>
			</div><a/></h1>
		<h2 class="text-xl lg:text-2xl opacity-80 text-pretty max-w-{700px}">
			<span class="text-blue-300">Programador FiveM.</span> <br>Soy de Galicia, España. Me especializo en programación de servidores en QBCore, destaco por el backend, siempre buscando aprender y mejorar. Mi objetivo es participar en servidores innovadores que amplíen mis conocimientos y permitan aportar soluciones creativas y efectivas.
		</h2>
		<nav class="flex gap-x-5 mt-6 flex-wrap">
			<Social_icons href="https://discord.com/users/448170541371752449">
				<Discord class="size-4 md:size-6"/>
				Capi34
			</Social_icons>
			<Social_icons href="https://github.com/CapiBurger">
				<Github class="size-4 md:size-6"/>
				GitHub
			</Social_icons>
			
		</nav>
		</Section>
		<Section_tecno id="tecnologias">
			<Tecnologias/>
		</Section_tecno>
		<Section id="proyectos">
			<div class="flex justify-center">
				<h2 class="text-4xl font-semibold pb-10 flex gap-x-3 items-center text-center mb-4"> <Code class="size-8 "/>Proyectos </h2>
			</div>
			<Proyectos/>
		</Section>
		<Section_experiencias id="experiencias">
			<div class="flex justify-center">
				<h2 class="text-4xl font-semibold pb-10 flex gap-x-3 items-center text-center mb-4"> <Cert_icon class="size-8 "/>Experiencia </h2>
			</div>
			<Experiencia/>
		</Section_experiencias>
		<Section_sobremi id="sobre_mi">
			<div class="flex justify-center">
				<h2 class="text-4xl font-semibold pb-10 flex gap-x-3 items-center text-center mb-4"> <Me_icons class="size-8 "/>Sobre mí </h2>
			</div>
			<Sobre_mi/>
		</Section_sobremi>
		<Footer/>
	</main>
	
</Layout>
